---
// Footer.astro
---

<footer>
    <div class="social-icons">
      <!-- American Express -->
      <svg>
        <use xlink:href="#amex"></use>
      </svg>
  
      <!-- Mastercard -->
      <svg>
        <use xlink:href="#mastercard"></use>
      </svg>
  
      <!-- PayPal -->
      <svg>
        <use xlink:href="#paypal"></use>
      </svg>
  
      <!-- Bitcoin -->
      <svg>
        <use xlink:href="#bitcoin"></use>
      </svg>
    </div>
  </footer>
  
  <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <!-- American Express -->
    <symbol id="amex" viewBox="0 0 50 30">
      <rect width="50" height="30" fill="#00257D"/>
      <text x="50%" y="50%" fill="white" font-size="10" font-family="Arial" text-anchor="middle" dy=".3em">AMEX</text>
    </symbol>
  
    <!-- Mastercard -->
    <symbol id="mastercard" viewBox="0 0 50 30">
      <circle cx="20" cy="15" r="10" fill="#EB001B"/>
      <circle cx="30" cy="15" r="10" fill="#F79E1B"/>
    </symbol>
  
    <!-- PayPal -->
    <symbol id="paypal" viewBox="0 0 50 30">
      <rect width="50" height="30" fill="#003087"/>
      <text x="50%" y="50%" fill="white" font-size="10" font-family="Arial" text-anchor="middle" dy=".3em">PayPal</text>
    </symbol>
  
    <!-- Bitcoin -->
    <symbol id="bitcoin" viewBox="0 0 50 50">
      <circle cx="25" cy="25" r="22" fill="#FF9900"/>
      <text x="50%" y="50%" fill="white" font-size="15" font-family="Arial" text-anchor="middle" dy=".3em">â‚¿</text>
    </symbol>
  </svg>
  